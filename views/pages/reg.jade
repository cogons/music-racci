extends ../layout

block content
	.container
		.row
			.col-md-4
				form.form-horizontal(method="post",action="/user/reg")
					.form-group
						.input-group
							.input-group-addon 用户名
							input#inputTitle.form-control(type="text", name="username")
					.form-group
						.input-group
							.input-group-addon 密码
							input#inputTitle.form-control(type="text", name="password")
					.form-group
						button.btn.btn-default(type="submit") 注册
